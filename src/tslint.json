{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "quotemark": [
          true,
          "single"
        ],
        "semicolon": [
          true,
          "never"
        ],
        "max-line-length": [
          true,
          120
        ]
    }
}
